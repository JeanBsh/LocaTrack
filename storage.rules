rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les fichiers de profil (signature et logo)
    match /profiles/{userId}/{allPaths=**} {
      // L'utilisateur peut lire et écrire ses propres fichiers
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
